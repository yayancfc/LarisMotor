<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yayanheryanto.larismotor">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.SalesMenuActivity" />
        <activity android:name=".activity.OwnerMenuActivity" />
        <activity android:name=".activity.MotorActivity" />
        <activity android:name=".activity.DetailMotorActivity" />
        <activity android:name=".activity.CustomerActivity" />
        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".activity.AddMotorActivity" />
        <activity android:name=".activity.EditMotorActivity"></activity>
    </application>

</manifest>